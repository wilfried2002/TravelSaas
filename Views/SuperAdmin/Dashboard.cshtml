<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Admin Dashboard - TravelSaaS</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: #f8f9fa;
            min-height: 100vh;
            display: block;
        }
        
        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .dashboard-header {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .dashboard-header h1 {
            color: #333;
            margin: 0;
            font-size: 2.5rem;
            font-weight: 300;
        }
        
        .user-info {
            text-align: right;
        }
        
        .user-info p {
            margin: 5px 0;
            color: #666;
        }
        
        .logout-btn {
            background: #dc3545;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin-top: 10px;
        }
        
        .logout-btn:hover {
            background: #c82333;
            color: white;
            text-decoration: none;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
        }
        
        .stat-card h3 {
            color: #667eea;
            font-size: 2.5rem;
            margin-bottom: 10px;
            font-weight: 300;
        }
        
        .stat-card p {
            color: #666;
            font-size: 1rem;
            margin: 0;
        }
        
        .stat-card i {
            font-size: 2rem;
            color: #667eea;
            margin-bottom: 15px;
        }
        
        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .action-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        
        .action-card:hover {
            transform: translateY(-5px);
        }
        
        .action-card h3 {
            color: #333;
            margin-bottom: 15px;
            font-size: 1.3rem;
            font-weight: 500;
        }
        
        .action-card p {
            color: #666;
            margin-bottom: 20px;
            line-height: 1.5;
        }
        
        .action-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
            color: white;
            text-decoration: none;
        }
        
        .action-btn i {
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1><i class="bi bi-building"></i> Super Admin Dashboard</h1>
            <div class="user-info">
                <p><i class="bi bi-person-circle"></i> @User?.Identity?.Name</p>
                <p><i class="bi bi-shield"></i> Type de compte: Super Administrateur</p>
                <p><i class="bi bi-calendar"></i> @DateTime.Now.ToString("dd/MM/yyyy")</p>
                <a href="/Home/Index" class="logout-btn">
                    <i class="bi bi-box-arrow-right"></i> Déconnexion
                </a>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <i class="bi bi-building"></i>
                <h3 id="totalAgencies">-</h3>
                <p>Agences</p>
            </div>
            <div class="stat-card">
                <i class="bi bi-people"></i>
                <h3 id="totalUsers">-</h3>
                <p>Utilisateurs</p>
            </div>
            <div class="stat-card">
                <i class="bi bi-ticket-perforated"></i>
                <h3 id="totalReservations">-</h3>
                <p>Réservations</p>
            </div>
            <div class="stat-card">
                <i class="bi bi-person-check"></i>
                <h3 id="activeUsers">-</h3>
                <p>Utilisateurs Actifs</p>
            </div>
        </div>

        <div class="actions-grid">
            <div class="action-card">
                <h3><i class="bi bi-building"></i> Gestion des Agences</h3>
                <p>Créer, modifier et gérer les agences de voyage dans le système.</p>
                <button class="action-btn" onclick="loadAgencies()">
                    <i class="bi bi-list"></i> Voir les Agences
                </button>
            </div>
            
            <div class="action-card">
                <h3><i class="bi bi-geo-alt"></i> Gestion des Points d'Agence</h3>
                <p>Gérer les points de vente de chaque agence.</p>
                <button class="action-btn" onclick="loadAgencyPoints()">
                    <i class="bi bi-list"></i> Voir les Points
                </button>
            </div>
            
            <div class="action-card">
                <h3><i class="bi bi-people"></i> Gestion des Utilisateurs</h3>
                <p>Créer et gérer les comptes utilisateurs de tous types.</p>
                <button class="action-btn" onclick="loadUsers()">
                    <i class="bi bi-list"></i> Voir les Utilisateurs
                </button>
            </div>
            
            <div class="action-card">
                <h3><i class="bi bi-graph-up"></i> Statistiques</h3>
                <p>Consulter les statistiques détaillées du système.</p>
                <button class="action-btn" onclick="loadStats()">
                    <i class="bi bi-bar-chart"></i> Voir les Stats
                </button>
            </div>
        </div>
    </div>

    <script>
        // Charger les statistiques au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            loadStats();
        });

        async function loadStats() {
            try {
                const response = await fetch('/SuperAdmin/stats');
                if (response.ok) {
                    const data = await response.json();
                    document.getElementById('totalAgencies').textContent = data.totalAgencies || 0;
                    document.getElementById('totalUsers').textContent = data.totalUsers || 0;
                    document.getElementById('totalReservations').textContent = data.totalReservations || 0;
                    document.getElementById('activeUsers').textContent = data.activeUsers || 0;
                }
            } catch (error) {
                console.error('Erreur lors du chargement des statistiques:', error);
            }
        }

        function loadAgencies() {
            // Redirection vers la page de gestion des agences
            window.location.href = '/SuperAdmin/agencies';
        }

        function loadAgencyPoints() {
            // Redirection vers la page de gestion des points d'agence
            window.location.href = '/SuperAdmin/agency-points';
        }

        function loadUsers() {
            // Redirection vers la page de gestion des utilisateurs
            window.location.href = '/SuperAdmin/users';
        }
    </script>
</body>
</html>