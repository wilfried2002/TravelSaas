<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Admin - Connexion</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container">
        <div class="login-container">
            <h2><i class="bi bi-shield-check"></i> Super Admin</h2>
            
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" style="background: #f8d7da; color: #721c24; padding: 10px; border-radius: 5px; margin-bottom: 20px;">
                    <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
                </div>
            }
            
            <form method="post" action="/Home/SuperAdminLogin">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                
                <div class="form-group">
                    <label><i class="bi bi-envelope"></i> Email</label>
                    <input type="email" name="email" class="form-control" placeholder="admin@travelsaas.com" required />
                </div>
                
                <div class="form-group">
                    <label><i class="bi bi-lock"></i> Mot de passe</label>
                    <input type="password" name="password" class="form-control" placeholder="Votre mot de passe" required />
                </div>
                
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-box-arrow-in-right"></i> Se connecter
                </button>
            </form>
            
            <a href="/" class="back-link">
                <i class="bi bi-arrow-left"></i> Retour à l'accueil
            </a>
            
            <div style="margin-top: 20px; padding: 15px; background: #e9ecef; border-radius: 5px; font-size: 0.9rem;">
                <strong>Test de connexion :</strong><br>
                <a href="/Home/TestUsers" target="_blank" style="color: #667eea;">Voir les utilisateurs existants</a>
            </div>
        </div>
    </div>

    <script>
        // Logs de débogage
        document.querySelector('form').addEventListener('submit', function(e) {
            const email = document.querySelector('input[name="email"]').value;
            const password = document.querySelector('input[name="password"]').value;
            console.log('Tentative de connexion:', { email, password: '***' });
        });
    </script>
</body>
</html>