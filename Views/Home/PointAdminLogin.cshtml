<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Point - Connexion</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container">
        <div class="login-container">
            <h2><i class="bi bi-geo-alt"></i> Administrateur de Point d'Agence</h2>
            
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" style="background: #f8d7da; color: #721c24; padding: 10px; border-radius: 5px; margin-bottom: 20px;">
                    <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
                </div>
            }
            
            <form method="post" action="/Home/PointAdminLogin">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                
                <div class="form-group">
                    <label><i class="bi bi-envelope"></i> Email</label>
                    <input type="email" name="email" class="form-control" placeholder="admin@point-agence.com" required />
                </div>
                
                <div class="form-group">
                    <label><i class="bi bi-lock"></i> Mot de passe</label>
                    <input type="password" name="password" class="form-control" placeholder="Votre mot de passe" required />
                </div>
                
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-box-arrow-in-right"></i> Se connecter
                </button>
            </form>
            
            <a href="/" class="back-link">
                <i class="bi bi-arrow-left"></i> Retour Ã  l'accueil
            </a>
        </div>
    </div>
</body>
</html>